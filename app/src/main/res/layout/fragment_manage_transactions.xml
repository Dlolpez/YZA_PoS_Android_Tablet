<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:padding="@dimen/padding_horizontal">

        <EditText
            android:id="@+id/search_transaction_id"
            android:hint="@string/transaction_id"
            android:layout_width="@dimen/search_blank_width"
            android:layout_height="@dimen/search_blank_height"
            android:inputType="number"
            android:textSize="@dimen/font_size_content"
            android:textColor="#000000"
            android:textAlignment="center"
            android:background="@color/mustard"
            android:selectAllOnFocus="true"
            android:padding="@dimen/margin_linear_elements"
            />
        <Button
            android:id="@+id/button_search"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/search_blank_height"
            android:text="Search"
            android:textAllCaps="false"
            android:textSize="@dimen/font_size_content"
            android:background="@color/eagleGreen"
            android:textColor="@color/colorAccent"
            android:padding="@dimen/margin_linear_elements"
            />
    </LinearLayout>

    <ListView
        android:id="@+id/list_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </ListView>

</LinearLayout>