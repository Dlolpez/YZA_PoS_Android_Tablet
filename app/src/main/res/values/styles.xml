<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorAccent">@color/colorText</item>
        <item name="android:datePickerDialogTheme">@style/MyDatePickerDialogTheme</item>
    </style>

    <style name="MyDatePickerDialogTheme" parent="android:Theme.Material.Light.Dialog">
        <item name="android:colorAccent">@color/mustard</item>

    </style>

    <style name="MyButton" parent="Widget.AppCompat.Button">
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="MainActivityPrimaryButtons" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">290dp</item>
        <item name="android:layout_height">250dp</item>
        <item name="android:background">@drawable/main_buttons</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:paddingTop">40dp</item>
    </style>

    <style name="MainActivitySecondaryButtons" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/generate_report_button</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">40dp</item>
        <item name="android:paddingRight">40dp</item>
        <item name="android:paddingLeft">40dp</item>
    </style>

    <style name="ProductDetailsTextView">
        <item name="android:textSize">@dimen/font_size_content</item>
    </style>

    <style name="DialogTitleTextView">
        <item name="android:textSize">@dimen/font_size_content</item>
        <item name="android:textColor">@color/eagleGreen</item>
        <item name="android:padding">@dimen/padding_horizontal</item>
    </style>

    <style name="FormLabel" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/font_size_content</item>
        <item name="android:textColor">@color/eagleGreen</item>
        <item name="android:paddingTop">@dimen/margin_form_labels</item>
    </style>

    <style name="FormAnswer">
        <item name="android:textSize">@dimen/font_size_content</item>
        <item name="android:textColor">#000000</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="android:inputType">text</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="NavigationDrawerStyle">
        <!-- text size in menu-->
        <item name="android:textSize">@dimen/font_size_content</item>
        <item name="android:textStyle">normal</item>

        <!-- item size in menu-->
        <item name="android:listPreferredItemHeightSmall">@dimen/drawer_item_height</item>
        <item name="listPreferredItemHeightSmall">@dimen/drawer_item_height</item>

        <!-- item padding left in menu-->
        <item name="android:listPreferredItemPaddingLeft">@dimen/padding_horizontal</item>
        <item name="listPreferredItemPaddingLeft">@dimen/padding_horizontal</item>

        <!-- item padding right in menu-->
        <item name="android:listPreferredItemPaddingRight">@dimen/padding_horizontal</item>
        <item name="listPreferredItemPaddingRight">@dimen/padding_horizontal</item>
    </style>

</resources>
